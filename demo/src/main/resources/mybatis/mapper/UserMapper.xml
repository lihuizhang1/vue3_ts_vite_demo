<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <resultMap id="userMap" type="com.example.demo.model.User">
        <id column="id" property="id"/>
        <id column="name" property="name"/>
        <id column="age" property="age"/>
        <id column="mail" property="mail"/>
        <id column="password" property="password"/>
    </resultMap>
    <select id="loginUser" parameterType="com.example.demo.model.User" resultMap="userMap">
        select * from user
        where
            name = #{name,jdbcType=VARCHAR}
        and
            password = #{password,jdbcType=VARCHAR}
    </select>
    <select id="selectUser" parameterType="com.example.demo.model.User" resultMap="userMap">
        select * from user
        where
            name = #{name,jdbcType=VARCHAR}
    </select>
    <insert parameterType="com.example.demo.model.User" id="signUpUser">
<!--        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">-->
<!--            select LAST_INSERT_ID()-->
<!--        </selectKey>-->
        insert into user(`name`, password)
        values (#{name}, #{password})
    </insert>
</mapper>